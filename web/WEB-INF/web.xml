<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/dashboard/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>controller.auth.SignupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginAdminController</servlet-name>
        <servlet-class>controller.admin.auth.LoginAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PodController</servlet-name>
        <servlet-class>controller.product.PodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboradController</servlet-name>
        <servlet-class>controller.admin.dashboard.DashboradController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.admin.user.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUserController</servlet-name>
        <servlet-class>controller.admin.user.EditUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAvatarUserController</servlet-name>
        <servlet-class>controller.admin.user.EditAvatarUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserController</servlet-name>
        <servlet-class>controller.admin.user.DeleteUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GroupController</servlet-name>
        <servlet-class>controller.admin.group.GroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddGroupController</servlet-name>
        <servlet-class>controller.admin.group.AddGroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditGroupController</servlet-name>
        <servlet-class>controller.admin.group.EditGroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteGroupController</servlet-name>
        <servlet-class>controller.admin.group.DeleteGroupController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>controller.admin.category.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCategoryController</servlet-name>
        <servlet-class>controller.admin.category.AddCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCategoryController</servlet-name>
        <servlet-class>controller.admin.category.EditCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCategoryController</servlet-name>
        <servlet-class>controller.admin.category.DeleteCategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginAdminController</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PodController</servlet-name>
        <url-pattern>/pods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboradController</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUserController</servlet-name>
        <url-pattern>/admin/users/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAvatarUserController</servlet-name>
        <url-pattern>/admin/users/editAvatar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserController</servlet-name>
        <url-pattern>/admin/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GroupController</servlet-name>
        <url-pattern>/admin/group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddGroupController</servlet-name>
        <url-pattern>/admin/group/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditGroupController</servlet-name>
        <url-pattern>/admin/group/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteGroupController</servlet-name>
        <url-pattern>/admin/group/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/admin/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCategoryController</servlet-name>
        <url-pattern>/admin/category/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCategoryController</servlet-name>
        <url-pattern>/admin/category/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCategoryController</servlet-name>
        <url-pattern>/admin/category/delete</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
